class Crossplane < Formula
  desc 'The official Crossplane CLI'
  homepage 'https://crossplane.io'
  version 'UNSET'
  license 'Apache-2.0'

  if OS.mac? && Hardware::CPU.intel?
    url 'https://releases.crossplane.io/stable/UNSET/bundle/darwin_amd64/crank.tar.gz'
    sha256 'EMPTY1'
  end
  if OS.mac? && Hardware::CPU.arm?
    url 'https://releases.crossplane.io/stable/UNSET/bundle/darwin_arm64/crank.tar.gz'
    sha256 'EMPTY2'
  end
  if OS.linux? && Hardware::CPU.intel?
    url 'https://releases.crossplane.io/stable/UNSET/bundle/linux_amd64/crank.tar.gz'
    sha256 'EMPTY3'
  end
  if OS.linux? && Hardware::CPU.arm? && !Hardware::CPU.is_64_bit?
    url 'https://releases.crossplane.io/stable/UNSET/bundle/linux_arm/crank.tar.gz'
    sha256 'EMPTY4'
  end
  if OS.linux? && Hardware::CPU.arm? && Hardware::CPU.is_64_bit?
    url 'https://releases.crossplane.io/stable/UNSET/bundle/linux_arm64/crank.tar.gz'
    sha256 'EMPTY5'
  end

  def install
    bin.install 'crank' => 'crossplane'
  end

  test do
    system "#{bin}/crossplane version --client"
  end
end
